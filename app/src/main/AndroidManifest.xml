<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.keepoapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ProfileUserActivity"></activity>
        <activity android:name=".activity.DetailUserActivity" />
        <activity android:name=".activity.SearchUserActivity" />
        <activity android:name=".activity.SearchToDoActivity" />
        <activity android:name=".activity.CreateToDoActivity" />
        <activity android:name=".activity.EditToDoActivity" />
        <activity android:name=".activity.DetailToDoActivity" />
        <activity android:name=".activity.MyToDoActivity" />
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
    </application>

</manifest>